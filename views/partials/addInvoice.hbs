<form class="ui stacked segment form" action="/invoiceCollection/{{invoiceCollection.id}}/addInvoice" method="POST">
    <div class="seven fields">
        <div class="field">
            <label>Date</label>
            <input placeholder="Date" type="text" name="date" autofocus required>
        </div>
        <div class="field">
            <label>Invoice Number</label>
            <input placeholder="Invoice #" type="text" name="invoiceNumber" required>
        </div>
        <div class="field">
            <label>Net Amount</label>
            <input placeholder="Net" type="text" name="netAmount" required>
        </div>
        <div class=" field ui form">
            <label>VAT Rate</label>
            <select id="vatRate" required>
                <option value="9">9%</option>
                <option value="13.5">13.5%</option>
                <option value="23">23%</option>
            </select>
        </div>
        <div class="field">
            <label>Invoice Status</label>
            <select id="invoiceStatus">
                <option value="paid">Paid</option>
                <option value="due">Due</option>
                <option value="overDue">Over-due</option>
            </select>
        </div>
        <form action="/invoiceCollection/uploadpicture" method="post" enctype="multipart/form-data">
                <div class="field">
                    <label>File</label>
                    <input type="file" name="picture">
                </div>
                <div class="field">
                    <label>File Title</label>
                    <input placeholder="Title" type="text" name="title">
                </div>
            <button> <i class="paper plane icon"></i></button>
        </form>
    </div>
</form>