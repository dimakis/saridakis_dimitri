<form class="ui stacked segment form" action="/invoiceCollection/{{invoiceCollection.id}}/addInvoice" method="POST">
    <div class="six fields">
        <div class="field">
            <label>Date</label>
            <input placeholder="Date" type="text" name="date" autofocus required>
        </div>
        <div class="field">
            <label>Invoice Number</label>
            <input placeholder="Invoice #" type="text" name="invoiceNumber" required>
        </div>
        <div class="field">
            <label>Net Amount</label>
            <input placeholder="Net" type="text" name="netAmount" required>
        </div>
        <div class="field">
            <label>VAT Amount</label>
            <input placeholder="VAT" type="text" name="vatAmount" required>
        </div>
        <div class="field">
            <label>Total Amount</label>
            <input placeholder="Total" type="text" name="totalAmount" required>
        </div>
        <div class="field">
            <label>Status</label>
            <input placeholder="Status" type="text" name="status" required>
        </div>
    </div>
    <button class="ui green submit button">Add Invoice</button>
</form>