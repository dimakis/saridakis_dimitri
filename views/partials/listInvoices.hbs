<table class="ui sortable inverted celled table">
    <thead>
    <tr>
        <th>Date</th>
        <th>Invoice Number</th>
        <th>Net Amount</th>
        <th>VAT Amount</th>
        <th>VAT Rate</th>
        <th>Status</th>
        <th>Total Amount</th>
        <th></th>
    </tr>
    </thead>
    <tbody>
    {{#each invoiceCollection.invoices}}
        <tr>
            <td>{{date}}</td>
            <td>{{invoiceNumber}}</td>
            <td>{{netAmount}}</td>
            <td>{{vatAmount}}</td>
            <td>{{vatRate}}</td>
            <td>{{status}}</td>
            <td>{{totalAmount}}</td>
            <td>
                <a href="/invoiceCollection/{{../invoiceCollection.id}}/updateInvoice/{{id}}">
                    <i class=" yellow edit outline icon"></i></a>
                <a href="/invoiceCollection/{{../invoiceCollection.id}}/deleteInvoice/{{id}}"> <i class=" red trash icon"></i></a>
            </td>
        </tr>
        </form>
    {{/each}}
    </tbody>
</table>
